<Window x:Class="GestureUserProject1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drawing App" Height="600" Width="1100">

    <Grid Background="#FF5B5B5B">
        <Canvas x:Name="drawingCanvas" Background="White" 
                MouseMove="Canvas_MouseMove" 
                MouseLeftButtonDown="Canvas_MouseLeftButtonDown" 
                MouseLeftButtonUp="Canvas_MouseLeftButtonUp" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,10,0,0" Height="282" Width="510"/>

        <Button x:Name="ClearButton" Content="Clear Canvas" 
                VerticalAlignment="Top" HorizontalAlignment="Left" 
                Margin="520,10,0,0" Width="100" 
                Click="Clear_Button"/>
    </Grid>

</Window>
